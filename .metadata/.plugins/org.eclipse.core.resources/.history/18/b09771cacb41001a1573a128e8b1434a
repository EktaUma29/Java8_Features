package com.collection;

import java.util.HashMap;

public class CyclicString {

	public static void main(String[] args) {

		System.out.println(check(4,6));
	}
	
	
	static int check(int n, long k) {
		
		int sum = 0;
		int total = 0;
		int arr[] = new int[n];
		for(int i = 0; i<n; i++) {
			arr[i] = i+1;
		}
		
		for(int i = 0; i<n; i++) {
			
			total = total + arr[i];
			
			if(total!=k) {
				if(sum<total) {
					sum = total;
				}
			}else {
				total = 0;
			}
			
			
		}
		
		return sum;
	}

}
